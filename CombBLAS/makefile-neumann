INCDIR = 
INCADD = -I$(INCDIR) 

OPT = -DNDEBUG -O3 -fno-exceptions 
DEB = -pg -fno-inline
COMPILER = g++ #mpic++	

MemoryPool.o:	MemoryPool.cpp SpDefs.h
	$(COMPILER) $(INCADD) $(DEB) -c -o MemoryPool.o MemoryPool.cpp

driver:	Driver.cpp SpDCCols.cpp dcsc.cpp SpHelper.h MemoryPool.o
	$(COMPILER) $(INCADD) $(DEB) -o driver Driver.cpp MemoryPool.o 

clean:
	rm -f driver
	rm -f MemoryPool.o 

cleanout:
	rm out.*
	rm err.*
