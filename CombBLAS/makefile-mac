INCDIR = /opt/local/include
INCADD = -I$(INCDIR) -I$(INCDIR)/mpich2

OPT = -DNDEBUG -O2 -w 
DEB = -g -w -DMEMDEBUG -DPERFDEB
COMPILER = g++	# later use mpicxx (but that's based on gcc 4.0)

MemoryPool.o:	MemoryPool.cpp SpDefs.h
	g++ $(INCADD) $(OPT) -c -o MemoryPool.o MemoryPool.cpp

driver:	Driver.cpp SpDCCols.cpp 
	g++ $(INCADD) $(DEB) -o driver Driver.cpp  

clean:
	rm -f driver
	rm -f MemoryPool.o 

cleanout:
	rm out.*
	rm err.*
